<header class="bg-gray-800 text-white p-2">
  <div class="flex mx-auto justify-between items-center w-10/12">
    <div>
      <%= link_to 'Rails chat tutorial', root_url, class: 'font-bold text-gray-500 hover:text-white text-xl tracking-tight'%>
    </div>

    <div>
    <% if current_user %>
        <div class="flex justify-between items-center">
          <button class="flex items-center text-white text-xl hover:font-bold" role="button">
            <img src="<%= current_user.gravatar_url %>" class="h-8 rounded-full"> 
            <span class="ml-2"><%= current_user.username %></span>
          </button>
          <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'inline-block bg-teal-700 hover:bg-teal-800 rounded-full px-4 py-2 ml-8 font-bold'  %>
        </div>
    <% end %>
    </div>

  </div>
</header>